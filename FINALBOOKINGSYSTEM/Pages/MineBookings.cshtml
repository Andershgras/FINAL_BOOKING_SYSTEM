@page
@model FINALBOOKINGSYSTEM.Pages.MineBookingsModel
@{
}
<h1>Lokale Oversigt</h1>

<table class="table table-bordered table-hover table-striped">
	<thead>
		<tr>
			<th>Id</th>
			<th>Navn</th>
			<th>Kapacitet</th>
			<th>IsBooked</th>
			<th>HasWhiteBoard</th>
			<th>Kommentar</th>
		</tr>
	</thead>
	<tbody>
		@if (Model.Items != null)
		{
			foreach (var item in Model.Items)
			{
				<tr>
					<td>@item.Id</td>
					<td>@item.Name</td>
					<td>@item.Kapacitet</td>
					<td>@item.IsBooked</td>
					<td>@item.HasWhiteBoard</td>
					<td>@item.Kommentar</td>
					<td>
						<a class="btn btn-secondary btn-sm" type="button" title="Book" asp-page="/Items/BookItem" asp-route-id="@item.Id">Book</a>
					</td>
				</tr>
			}
		}
	</tbody>
</table>